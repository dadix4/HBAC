{% extends 'layoutAdmin.html.twig' %}

{% block breadcrumb %}
    <!-- breadcrumb -->
    <ol class="breadcrumb">
        <li>Home</li>
        <li>Dashboard</li>
        <li>Blog</li>
    </ol>
    <!-- end breadcrumb -->
{% endblock %}

{% block sousBreadcrumb %}
    <h1 class="page-title txt-color-blueDark">
        <i class="fa fa-shopping-cart"></i>
        Blog
        <span>> Modifier une Actualité</span></h1>
{% endblock %}

{% block body %}
    <div class="well">
        <h1>Modification d'une Actualité</h1>


        {{ form_start(edit_form) }}
        <form class="form-horizontal" action="{{ path('admin_blog_article_edit', { 'id': article.id }) }}" method="POST">
            <fieldset>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-btn">
                            <button href="#newCategory" data-toggle="modal" class="btn btn-default btn-primary" type="button">
                                <i class="fa fa-plus" aria-hidden="true"></i> Catégorie
                            </button>
                        </div>
                        {{ form_widget(edit_form.categories, { 'attr': {'placeholder': '' , 'id':'appendbutton'} }) }}
                        {{ form_errors(edit_form.categories) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_widget(edit_form.titre, { 'attr': {'placeholder': 'Titre'} }) }}
                    {{ form_errors(edit_form.titre) }}
                </div>
                <div class="form-group">
                    {{ form_widget(edit_form.contenu, { 'attr': {'placeholder': ''} }) }}
                    {{ form_errors(edit_form.contenu) }}
                </div>

                <div class="form-group">
                    {{ form_widget(edit_form.image, { 'attr': {'class': 'form-control' } }) }}
                    {{ form_errors(edit_form.image) }}
                </div>
            </fieldset>

            <div class="form-group">
                <button type="submit" href="{{ path('admin_blog_article_index') }}" class="btn btn-labeled btn-success"> <span class="btn-label"><i class="glyphicon glyphicon-ok"></i></span>Modifier </button>
            </div>

            {{ form_rest(edit_form) }}
        </form>
        {{ form_end(edit_form) }}

    </div>

    <!-- #modal-dialog -->
    <div class="modal fade" id="newCategory" tabindex="-1" role="dialog" aria-labelledby="newCategory-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Nouvelle Catégorie </h4>
                </div>
                <div class="modal-body">
                    {{ render(controller('AppBundle:Admin/Blog/Article:newCategorie')) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- end #modal-dialog -->

    <a href="{{ path('admin_blog_article_index') }}" class="btn btn-labeled btn-default">
  <span class="btn-label">
    <i class="glyphicon glyphicon-chevron-left"></i>
  </span>Retour
    </a>
{% endblock %}
