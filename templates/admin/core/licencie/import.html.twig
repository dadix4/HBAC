                <!-- This area used as dropdown edit box -->
            </div>
            <!-- end widget edit box -->

            <!-- widget content -->
            <div class="widget-body no-padding">

                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Date</th>
                            <th>Nom Fichier</th>
                            <th><i class="fa fa-user"></i></th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for fichierlicencie in listfichier %}
                            <tr>
                                <td>{% if fichierlicencie.createdAt %}{{ fichierlicencie.createdAt|date('d-m-Y H:i') }} {% endif %}</td>
                                <td>{{ fichierlicencie.name }}</td>
                                <td>{{ fichierlicencie.createdBy.username }}</td>
                                <td>
                                    <div class="btn-group-vertical">
                                        {% if fichierlicencie.import == 0 %}
                                        <a href="{{ path('admin_import_importation', {'id': fichierlicencie.id}) }}" class="btn btn-xs bg-color-purple txt-color-white">
                                            <i class="fa fa-cloud-upload"></i>
                                            importer</a>
                                        {% endif %}
                                        <form action="{{ path('admin_import_fichier_delete' , {'id' : fichierlicencie.id}) }}" method="delete">
                                        <button class="btn btn-danger btn-xs" type="submit">
                                            <i class="fa fa-trash"></i>
                                            Supprimer
                                        </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <p>
                                Pas de fichier licenciés uploader
                            </p>
                        {% endfor %}

                        </tbody>
                    </table>

                </div>

            </div>
            <!-- end widget content -->

        </div>
        <!-- end widget div -->

    </div>
