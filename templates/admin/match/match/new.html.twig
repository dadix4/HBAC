div>
                <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                <h2>Creation de la Rencontre </h2>

                <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span></header>

            <!-- widget div-->
            <div role="content">

                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <!-- This area used as dropdown edit box -->

                </div>
                <!-- end widget edit box -->

                <!-- widget content -->
                    <div class="widget-body no-padding">
                        {{ form_start(form, {'action': path('admin_match_new'), 'method': 'POST', 'attr' : {'class' : 'smart-form'} }) }}

                        {{ form_errors(form) }}
                        <fieldset>
                            <div class="row">
                                <section class="col col-6">
                                    <label class="label">Date du Match<strong class="text-danger">*</strong></label>
                                    <label class="input">
                                        {{ form_widget(form.date) }}
                                        {{ form_errors(form.date) }}
                                    </label>
                                </section>
                                <section class="col col-6">
                                    <label class="label">Horaire du Match<strong class="text-danger">*</strong></label>
                                    <label class="input">
                                        {{ form_widget(form.heure, {'attr': {'placeholder': ""}}) }}
                                        {{ form_errors(form.heure) }}
                                    </label>
                                </section>
                            </div>
                            <div class="row">
                                <section class="col col-6">
                                    <label class="label">Club Local<strong class="text-danger">*</strong></label>
                                    <label class="input">
                                        {{ form_widget(form.local) }}
                                        {{ form_errors(form.local) }}
                                    </label>
                                </section>
                                <section class="col col-6">
                                    <label class="label">Numéro Fédéral Club Local</label>
                                    <label class="input">
                                        {{ form_widget(form.numReceveur, {'attr': {'placeholder': ""}}) }}
                                        {{ form_errors(form.numReceveur) }}
                                    </label>
                                </section>
                            </div>
                            <div class="row">
                                <section class="col col-6">
                                    <label class="label">Club Visiteur<strong class="text-danger">*</strong></label>
                                    <label class="input">
                                        {{ form_widget(form.visiteur) }}
                                        {{ form_errors(form.visiteur) }}
                                    </label>
                                </section>
                                <section class="col col-6">
                                    <label class="label">Numéro Fédéral Club Visiteur</label>
                                    <label class="input">
                                        {{ form_widget(form.numVisiteur, {'attr': {'placeholder': ""}}) }}
                                        {{ form_errors(form.numVisiteur) }}
                                    </label>
                                </section>
                            </div>
                            <div class="row">
                                <section class="col col-4">
                                    <label class="label">Compétition<strong class="text-danger">*</strong></label>
                                    <label class="input">
                                        {{ form_widget(form.competition) }}
                                        {{ form_errors(form.competition) }}
                                    </label>
                                </section>
                                <section class="col col-4">
                                    <label class="label">Poule du Championnat<strong class="text-danger">*</strong></label>
                                    <label class="input">
                                        {{ form_widget(form.poule) }}
                                        {{ form_errors(form.poule) }}
                                    </label>
                                </section>
                                <section class="col col-4">
                                    <label class="label">Référence du Championnat</label>
                                    <label class="input">
                                        {{ form_widget(form.numPoule, {'attr': {'placeholder': ""}}) }}
                                        {{ form_errors(form.numPoule) }}
                                    </label>
                                </section>
                            </div>
                            <div class="row">
                                <section class="col col-6">
                                    <label class="label">Nom de la Salle</label>
                                    <label class="input">
                                        {{ form_widget(form.nomSalle) }}
                                        {{ form_errors(form.nomSalle) }}
                                    </label>
                                </section>
                                <section class="col col-6">
                                    <label class="label">Adresse de la Salle</label>
                                    <label class="input">
                                        {{ form_widget(form.adresseSalle, {'attr': {'placeholder': ""}}) }}
                                        {{ form_errors(form.adresseSalle) }}
                                    </label>
                                </section>
                            </div>
                            <div class="row">
                                <section class="col col-6">
                                    <label class="label">Ville<strong class="text-danger">*</strong></label>
                                    <label class="input">
                                        {{ form_widget(form.ville) }}
                                        {{ form_errors(form.ville) }}
                                    </label>
                                </section>
                                <section class="col col-6">
                                    <label class="label">Code Postal</label>
                                    <label class="input">
                                        {{ form_widget(form.cpSalle, {'attr': {'placeholder': ""}}) }}
                                        {{ form_errors(form.cpSalle) }}
                                    </label>
                                </section>
                            </div>
                        </fieldset>
                        <footer>
                            <button type="submit" class="btn btn-success">
                                Ajouter
                            </button>
                        </footer>

                        {{ form_end(form) }}
                    </div>
                <!-- end widget content -->

            </div>
            <!-- end widget div -->

        </div>
        <!-- end widget -->

    </article>

    <ul>
        <li>
            <a href="{{ path('admin_match_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
